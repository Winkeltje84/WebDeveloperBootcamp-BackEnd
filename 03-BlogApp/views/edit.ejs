<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Blog '<%= blogPost.title %>'</div>
  <form class="ui form" action="/blogs/<%= blogPost._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blogPost[title]" value="<%= blogPost.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blogPost[image]" value="<%= blogPost.image %>">
    </div>
    <div class="field">
      <label>Blog content</label>
      <textarea name="blogPost[body]"><%= blogPost.body %></textarea>
    </div>
    <button class="fluid big ui inverted orange button">Save</button>
  </form>
</div>

<% include partials/footer %>
