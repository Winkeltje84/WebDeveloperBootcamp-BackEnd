<% include partials/header %>

<div class="ui main text container">
  <div class="ui huge header">RESTful Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogPosts.forEach(function(blogPost){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blogPost.image %>" alt="Blogpost image">
          </div>
          <div class="content">
            <a href="/blogs/<%= blogPost._id %>" class="header">
              <%= blogPost.title %>
            </a>
            <div class="meta">
              <p>Created on: <%= blogPost.created.toDateString() %></p>
            </div>
            <div class="description">
              <p><%- blogPost.body.substring(0, 100) %></p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= blogPost._id %>">
                Read more
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
<ul>

</ul>

<% include partials/footer %>
