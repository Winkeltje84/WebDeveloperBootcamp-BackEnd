<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blogPost.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" alt="blog image" src="<%= blogPost.image %>">
      <div class="content">
        <span><%= blogPost.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blogPost.body %></p>
      </div>
      <a class="ui button big orange inverted" href="/blogs/<%= blogPost._id %>/edit">Edit Blog Post</a>
      <form id="deleteButton" class="ui form" action="/blogs/<%= blogPost._id %>?_method=DELETE" method="POST">
        <button class="ui button big red inverted">DELETE Blog Post</button>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>
