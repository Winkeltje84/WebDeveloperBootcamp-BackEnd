<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center">Create New Comment to <%= campground.name %></h1>
  <div style="width: 30%; margin: 30px auto">
    <form class="form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]"  placeholder="write your comment">
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
  </div>
</div>

<% include ../partials/footer %>
