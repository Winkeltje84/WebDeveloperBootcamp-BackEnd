<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Create New Campground</h1>
    <div style="width: 30%; margin: 30px auto">
      <form class="form" action="/campgrounds" method="post">
        <div class="form-group">
          <label for="name">Campground name:</label>
          <input class="form-control" type="text" name="name"  placeholder="name">
        </div>
        <div class="form-group">
          <label for="image">Image url</label>
          <input class="form-control" type="text" name="image" placeholder="url">
        </div>
        <div class="form-group">
          <label for="name">Price per night:</label>
          <input class="form-control" type="number" name="price"  placeholder="Price in EUR" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input class="form-control" type="text" name="description"  placeholder="please describe the campground">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </form>
      <a href="/campgrounds">Back to Campgrounds</a>
    </div>
  </div>
