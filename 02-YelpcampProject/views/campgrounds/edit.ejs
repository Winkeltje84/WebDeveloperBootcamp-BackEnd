<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center">Edit <%= campground.name %></h1>
  <div style="width: 30%; margin: 30px auto">
    <form class="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Campground name:</label>
        <input class="form-control" type="text" name="campground[name]"  value="<%= campground.name %>">
      </div>
      <div class="form-group">
        <label for="image">Image url:</label>
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
      </div>
      <div class="form-group">
        <label for="name">Price per night:</label>
        <input class="form-control" type="number" name="campground[price]"  value="<%= campground.price %>" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-control" type="text" name="campground[escription]"  value="<%= campground.description %>">
      </div>
      <button class="btn btn-lg btn-warning btn-block" type="submit">Submit</button>
    </form>
    <a href="/campgrounds">Back to Campgrounds</a>
  </div>
</div>

<% include ../partials/footer %>
