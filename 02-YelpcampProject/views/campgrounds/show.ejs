<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="image-responsive" src="<%= campground.image %>" alt="Campground Image">
        <div class="caption-full">
          <h4 class="pull-right">â‚¬9,00 per night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p>description: <%= campground.description %></p>
          <p><em>Campground published by <%= campground.user.username %></em></p>
          <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
          <form id="del-campground-form" class="form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>

        <div class="well">
          <div class="text-right">
            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Write Comment</a>
          </div>
          <hr>
          <% campground.comments.forEach(function(comment){ %>
            <div class="row">
              <div class="col-md-12">
                <strong><%= comment.author.username %></strong>
                <span class="pull-right">10 days ago</span>
                <p><%= comment.text %></p>
              </div>
            </div>
          <% }) %>
        </div>

        <a class="btn btn-danger" href="/campgrounds">Back to Campgrounds page</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
