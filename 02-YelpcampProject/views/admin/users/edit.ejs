<% include ../../partials/header %>

<div class="row">
  <h1 class="sign-title">Edit user</h1>
  <div class="sign-form">
    <form class="form" action="/admin/users/<%= user._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
      </div>
      <div class="form-group">
        <label for="isAdmin">Administrator</label>
        <select class="form-control" name="user[isAdmin]" placeholder="<%= user.isAdmin %>">
          <% if(user.isAdmin){ %>
            <option value="true">True</option>
            <option value="false">False</option>
          <% } else { %>
            <option value="false">False</option>
            <option value="true">True</option>
            <% } %>
        </select>
      </div>
      <div class="form-group">
        <button class="submit form-control btn btn-success">Save User</button>
      </div>
    </form>
  </div>
</div>

<% include ../../partials/footer %>
