<% include ../../partials/header %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Admin status</th>
      <th>User Profile</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user){ %>
      <tr>
        <td><%= user.username %></td>
        <td><% if(user.isAdmin){ %>
          <a class="btn btn-success" href="/admin/users/<%= user._id %>/admin_status/edit">True</a>
        <% } else { %>
          <a class="btn btn-danger" href="/admin/users/<%= user._id %>/admin_status/edit">False</a>
        <% } %></td>
        <td>
          <a class="btn btn-success" href="/users/<%= user._id %>">Show</a>
          <a class="btn btn-warning" href="/users/<%= user._id %>/edit">Edit</a>
          <form class="form del-form" action="/users/<%= user._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<% include ../../partials/footer %>
