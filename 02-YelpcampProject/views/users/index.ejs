<% include ../partials/header %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>User status</th>
      <th>Admin options</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(function(user){ %>
        <% if(user.isAdmin){ %>
          <tr class="danger">
        <% } else { %>
          <tr>
        <% }%>
        <td><%= user.username %></td>
        <td><%= user.isAdmin %></td>
        <td><a class="btn btn-warning" href="/users/<%= user._id %>/edit">Edit User</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<% include ../partials/footer %>
